{
  "name": "tdd_node",
  "version": "1.0.0",
  "description": "tdd with node",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start:dev": "nodemon app",
    "test": "jest --watch",
    "start": "node app",
    "lint": "eslint ."
  },
  "keywords": [
    "tdd_with_node",
    "tdd_express"
  ],
  "author": "tanvir mahmud",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "eslint": "^8.31.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
